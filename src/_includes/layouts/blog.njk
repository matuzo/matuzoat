---
layout: layouts/base.njk
---

<article class="blog__content content rich-text">
  <header class="blog__header">
    <h1 class="blog__heading h1">{{ title }}</h1>

    <p class="blog__date">
      posted on <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
    </p>
  </header>

  <div class="blog__teaser">
    <strong>
      {{ teaser | safe }}
    </strong>
  </div>

  {% if content %}
    {{ content | safe }}
  {% else %}
    <p>
      Read the full article on 
      <a href="{{ url }}" rel="noopener" class="no-line" aria-hidden="true">
        {% for pub in collections.publications %}
          {% if publication == pub.data.title %}
            <span class="post-list__image post-list__image--{{ publication | stringify | slug }} blog__publication">
              <img src="{{ metadata.cloudinary }}/h_32/{{ pub.data.logo }}" alt="" width="32" />
            </span>
          {% endif %}
        {% endfor %}
        </a>
      <a href="{{ url }}" rel="noopener">
        {{ publication}} 
      </a>.
    </p>
  {% endif %}
</article>
