{# <ol class="til" reversed> #}
{% for til in collections.til|reverse %}
  <section>
    <h2>
      TIL #{{ loop.revindex }}
    </h2>
    <p>
      {{ til.data.title }}
    </p>

    {% if til.data.image %}
      {% if til.data.link %}
        <a href="{{ til.data.link }}" rel="noopener">
          <img loading="lazy" src="{{ metadata.cloudinary }}/w_440/{{til.data.image}}" alt="{{ til.data.title }}">
        </a>
      {% else %}
        <a href="{{ metadata.cloudinary }}/{{til.data.image}}" rel="noopener">
          <img loading="lazy" src="{{ metadata.cloudinary }}/w_440/{{til.data.image}}" alt="{{ til.data.title }}">
        </a>
      {% endif %}
    {% endif %}

    {{ til.templateContent | safe }}

    {% if til.data.link %}
      <p>
        <a href="{{  til.data.link }}" rel="noopener">
          {{  til.data.link }}
        </a>
      </p>
    {% endif %}
  </section>
{% endfor %}
