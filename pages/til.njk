<ul class="image-list">
{% for til in collections.til|reverse %}
  <li class="image-list__item">
    <h2 class="image-list__title">
      <strong class="image-list__title-inner">TIL #{{ loop.index }}</strong><br />{{ til.data.title }}
    </h2>
    
    {% if til.data.image %}
      {% if til.data.link %}
        <a href="{{ til.data.link }}" rel="noopener" class="image-list__link">
          <img class="image-list__image" src="{{ til.data.image }}" alt="" />
        </a>
      {% endif %}
    {% endif %}
  </li>
{% endfor %}
</ul>
